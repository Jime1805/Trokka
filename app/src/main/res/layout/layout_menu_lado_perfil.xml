<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/degradado_fonfo_menu_drawable">
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/vLinea"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgPerfil"
        android:text="@string/ajustes"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="32sp"
        android:gravity="start"
        android:layout_marginStart="45dp"
        android:layout_marginVertical="50dp"/>

    <ImageView
        android:id="@+id/imgPerfil"
        android:contentDescription="@string/perfil"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/vLinea"
        app:layout_constraintStart_toEndOf="@+id/tvTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_profile2"
        android:layout_marginStart="110dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="30dp"
        />

    <View
        android:id="@+id/vLinea"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/views"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="40dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>