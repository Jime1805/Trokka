<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradado_fondo"
    tools:context=".Loby_Activity">

    <TextView
        android:id="@+id/tvUser"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Benvingut: Usuario"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="32sp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvImatgeObjecte"
        app:layout_constraintTop_toBottomOf="@+id/tvUser"
        app:layout_constraintBottom_toTopOf="@+id/cvDescripcioObjecte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:cardCornerRadius="20dp"
        android:layout_marginHorizontal="40dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivIzquierda"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/userPicture"
                android:src="@drawable/ic_flechita"
                android:background="@color/flechita"
                />
            <ImageView
                android:id="@+id/ivImagenObjeto"
                android:contentDescription="@string/producte"
                android:layout_width="270dp"
                android:layout_height="300dp"
                android:src="@drawable/ic_imagen_vacia"/>
            <ImageView
                android:id="@+id/ivDerecha"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/userPicture"
                android:src="@drawable/ic_flechita_derecha"
                android:background="@color/flechita"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvDescripcioObjecte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        app:cardBackgroundColor="@color/descripcion_objeto"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@+id/cvImatgeObjecte"
        app:layout_constraintBottom_toTopOf="@+id/viewLinia">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/tvDescripcio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="DescripciÃ³n objeto"
                android:textColor="@color/white"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>










    <!-- Menu de abajo para todas las activities -->

    <View
        android:id="@+id/viewLinia"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/borde"
        app:layout_constraintBottom_toTopOf="@+id/menuBottom"
        />

    <LinearLayout
        android:id="@+id/menuBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="15dp"
        android:layout_marginBottom="10dp"
        >

        <ImageView
            android:id="@+id/btn_mapa"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_mapa"
            android:contentDescription="@string/map"
            app:tint="@color/white"
            android:background="?attr/selectableItemBackground"/>

        <ImageView
            android:id="@+id/btn_lupa"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_lupa"
            android:contentDescription="@string/lupa"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="60dp"
            app:tint="@color/white"
            android:background="?attr/selectableItemBackground"/>

        <ImageView
            android:id="@+id/btn_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/perfil"
            android:src="@drawable/ic_profile2"
            app:tint="@color/white"
            android:background="?attr/selectableItemBackground"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
