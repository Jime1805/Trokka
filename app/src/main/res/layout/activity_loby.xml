<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradado_fondo"
    tools:context=".Loby_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/menuBottom"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ventas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginTop="60dp">

            <TextView
                android:id="@+id/tvUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Benvingut: Usuario"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="32sp"/>

            <!-- Estructura para todas las ventas que se vean en el menú -->

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="30dp"
                android:layout_marginTop="70dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgProd1"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="20dp"
                        android:contentDescription="@string/producte"/>

                    <TextView
                        android:id="@+id/descProd1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="20dp"
                        android:layout_marginEnd="20dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        tools:text="Descripción del producto"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>










    <!-- Menu de abajo para todas las activities -->

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/borde"
        app:layout_constraintBottom_toTopOf="@+id/menuBottom"
        />

    <LinearLayout
        android:id="@+id/menuBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="15dp"
        android:layout_marginBottom="10dp"
        >

        <ImageView
            android:id="@+id/btn_mapa"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_mapa"
            android:contentDescription="@string/map"
            app:tint="@color/white"
            android:background="?attr/selectableItemBackground"/>

        <ImageView
            android:id="@+id/btn_lupa"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_lupa"
            android:contentDescription="@string/lupa"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="60dp"
            app:tint="@color/white"
            android:background="?attr/selectableItemBackground"/>

        <ImageView
            android:id="@+id/btn_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/perfil"
            android:src="@drawable/ic_profile2"
            app:tint="@color/white"
            android:background="?attr/selectableItemBackground"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
