<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradado_fondo"
    tools:context=".UploadObjectActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/so_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/menu_alto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp"
            >

            <ImageView
                android:id="@+id/imgFlechita"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="@string/tornar_enrere"
                android:src="@drawable/ic_flechita"
                app:tint="@color/white"
                android:layout_marginStart="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/subir_objetos"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/so_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal="30dp"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:id="@+id/so_imagen"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:contentDescription="@string/imatge_del_nou_objecte"
            android:src="@drawable/ic_trooka_tittle"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@string/boto_per_afegir_nou_objecte"
            android:src="@drawable/ic_lapiz"
            app:layout_constraintEnd_toEndOf="@id/so_imagen"
            app:layout_constraintBottom_toBottomOf="@id/so_imagen"
            android:layout_margin="10dp"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/so_imagen"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="30dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripció"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    />
                <EditText
                    android:id="@+id/et_descripcion"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:paddingLeft="12dp"
                    android:hint="Afegeix una descripció"
                    android:inputType="textCapSentences|textNoSuggestions|textMultiLine"
                    android:background="@android:color/white"
                    android:minLines="3"
                    android:maxLines="5"
                    android:gravity="top"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_acanvi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_descripcion"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="30dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Que busques a canvi?"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    />
                <EditText
                    android:id="@+id/et_acanvi"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:paddingLeft="12dp"
                    android:hint="Descriu que busques a canvi"
                    android:inputType="textCapSentences|textNoSuggestions|textMultiLine"
                    android:background="@android:color/white"
                    android:minLines="3"
                    android:maxLines="5"
                    android:gravity="top"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--Boton para guardar i subir objeto-->
    <androidx.cardview.widget.CardView
        android:id="@+id/btn_subirObjeto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/menuBottom"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/init_session"
        app:cardCornerRadius="30dp"
        android:layout_marginBottom="30dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subir Objeto"
            android:textSize="18dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:padding="10dp"
            />

    </androidx.cardview.widget.CardView>

    <!-- Menu de abajo para todas las activities -->
    <View
        android:id="@+id/vLinea"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/borde"
        app:layout_constraintBottom_toTopOf="@+id/menuBottom"
        />

    <LinearLayout
        android:id="@+id/menuBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="15dp"
        android:layout_marginBottom="10dp"
        >

        <ImageView
            android:id="@+id/btn_mapa"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_mapa"
            android:contentDescription="@string/map"
            app:tint="@color/white"
            android:background="?attr/selectableItemBackground"/>

        <ImageView
            android:id="@+id/btn_lupa"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_lupa"
            android:contentDescription="@string/lupa"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="60dp"
            app:tint="@color/white"
            android:background="?attr/selectableItemBackground"/>

        <ImageView
            android:id="@+id/btn_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/perfil"
            android:src="@drawable/ic_profile2"
            app:tint="@color/white"
            android:background="?attr/selectableItemBackground"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>