<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:padding="18dp"
    android:layout_height="match_parent"
    android:background="@drawable/degradado_fondo"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/tittle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/info_user"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:contentDescription="@string/tittle_app"
        android:src="@drawable/ic_trooka_tittle"
        android:layout_marginTop="20dp"
        app:tint="@color/trooka_tittle"/>


    <LinearLayout
        android:id="@+id/info_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/tittle"
        android:gravity="center"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="80dp">

        <EditText
            android:id="@+id/etNombreUsuario"
            android:autofillHints="Nombre de usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_marginBottom="13dp"
            android:hint="@string/nombre_usuario"
            android:inputType="text"
            android:background="@android:color/white"/>
        <EditText
            android:id="@+id/etPassInit"
            android:autofillHints="Contraseña"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_marginBottom="0dp"
            android:hint="@string/contraseña"
            android:inputType="textPassword"
            android:background="@android:color/white"/>

        <Button
            android:id="@+id/btnIniciarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/init_session"
            android:textSize="18sp"
            android:paddingVertical="12dp"
            android:backgroundTint="@color/init_session"
            android:layout_marginBottom="6dp"/>
        <TextView
            android:id="@+id/tvRegistrarse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/crear_cuenta"
            android:textColor="@color/enlaces"
            android:textSize="16sp"
            android:focusable="true"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>