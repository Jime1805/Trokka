<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradado_fondo"
    tools:context=".PerfilActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/cvHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/perfil"
            app:titleTextColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/menu_alto"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_constraintBottom_toTopOf="@id/llinfoUser" />

        <LinearLayout
            android:id="@+id/llinfoUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvHeader"
            android:layout_marginVertical="40dp"
            android:layout_marginHorizontal="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:backgroundTint="@color/configuracio_user"
                    android:layout_marginHorizontal="30dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="200dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/userPicture"
                        android:src="@drawable/ic_profile2"
                        app:tint="@color/logo_perfil"/>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginVertical="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:cardBackgroundColor="@color/info_user"
                        app:cardCornerRadius="20dp">

                        <TextView
                            android:id="@+id/tvNombreUsuario"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="@string/nombre_usuario"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:gravity="center"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        app:cardBackgroundColor="@color/info_user"
                        app:cardCornerRadius="20dp"
                        android:layout_gravity="center">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/valoracion"
                            android:textSize="20sp"
                            android:gravity="center"/>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/info_user"
                android:layout_marginVertical="15dp"
                android:layout_marginStart="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/descripcion"
                    android:layout_margin="10dp"
                    android:textSize="16sp"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvEditarObjetos"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/info_user"
            app:layout_constraintTop_toBottomOf="@id/llinfoUser"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cvSubirObjetos"
            app:layout_constraintBottom_toTopOf="@+id/cvFavs"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="40dp"
            app:cardCornerRadius="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/imgLapiz"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:contentDescription="@string/imagePencil"
                    android:src="@drawable/ic_lapiz"
                    app:tint="@color/white"/>
                <TextView
                    android:id="@+id/tvLapiz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="@string/move_to_edit_perfil"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvSubirObjetos"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/info_user"
            app:layout_constraintTop_toBottomOf="@id/llinfoUser"
            app:layout_constraintStart_toEndOf="@id/cvEditarObjetos"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/cvCanviarCompta"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="40dp"
            app:cardCornerRadius="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/imgUpload"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_subir_objetos"
                    app:tint="@color/white"/>
                <TextView
                    android:id="@+id/tvUpload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="@string/move_to_upload_objects"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvFavs"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/info_user"
            app:layout_constraintTop_toBottomOf="@id/cvEditarObjetos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cvCanviarCompta"
            app:layout_constraintBottom_toTopOf="@id/vLinea"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="30dp"
            app:cardCornerRadius="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/imgMisObjetos"
                    android:contentDescription="@string/imageMyObjects"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_favorito_vacio"
                    app:tint="@color/white"/>
                <TextView
                    android:id="@+id/tvMisObjetos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="@string/move_to_my_favorites"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvCanviarCompta"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/info_user"
            app:layout_constraintTop_toBottomOf="@id/cvSubirObjetos"
            app:layout_constraintStart_toEndOf="@id/cvFavs"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/vLinea"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="30dp"
            app:cardCornerRadius="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/imgCanvioUsuaio"
                    android:contentDescription="@string/imageChangeAccount"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_canvio_usuario"
                    app:tint="@color/white"/>
                <TextView
                    android:id="@+id/tvCanvioUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="@string/move_to_canviar_compta"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- Menu de abajo para todas las activities -->

        <View
            android:id="@+id/vLinea"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/borde"
            app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
            />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:itemActiveIndicatorStyle="@style/Theme.BottomNavigationView.ActiveIndicator"
            app:itemIconGravity="top"
            app:itemIconSize="40dp"
            app:itemIconTint="@color/white"
            app:labelVisibilityMode="unlabeled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/bottom_nav_menu" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/menu_lado_cuerpo"
        app:menu="@menu/menu_costat"
        app:headerLayout="@layout/layout_menu_lado_perfil"/>


</androidx.drawerlayout.widget.DrawerLayout>
