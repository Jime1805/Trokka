<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradado_fondo"
    tools:context=".PerfilActivity">

    <LinearLayout
        android:id="@+id/llHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/menu_alto">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp">

                <ImageView
                    android:id="@+id/imgFlechita"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/tornar_enrere"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_flechita"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llinfoUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llHeader"
        android:layout_marginVertical="40dp"
        android:layout_marginHorizontal="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:backgroundTint="@color/configuracio_user"
                android:layout_marginHorizontal="30dp"
                android:layout_gravity="center"
                app:cardCornerRadius="200dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="logo_perfil"
                    android:src="@drawable/ic_profile2"
                    app:tint="@color/logo_perfil"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginVertical="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/info_user"
                    app:cardCornerRadius="20dp">

                    <TextView
                        android:id="@+id/tvNombreUsuario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="@string/nombre_usuario"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:cardBackgroundColor="@color/info_user"
                    app:cardCornerRadius="20dp"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/valoracion"
                        android:textSize="20sp"
                        android:gravity="center"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/info_user"
            android:layout_marginVertical="15dp"
            android:layout_marginStart="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/descripcion"
                android:layout_margin="10dp"
                android:textSize="16sp"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/cvEditarObjetos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/info_user"
        app:layout_constraintTop_toBottomOf="@id/llinfoUser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cvSubirObjetos"
        app:layout_constraintBottom_toTopOf="@+id/cvVerMisObjetos"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="40dp"
        app:cardCornerRadius="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/imgLapiz"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_lapiz"/>
            <TextView
                android:id="@+id/tvLapiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="Editar objeto"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvSubirObjetos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/info_user"
        app:layout_constraintTop_toBottomOf="@id/llinfoUser"
        app:layout_constraintStart_toEndOf="@id/cvEditarObjetos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cvCanviarCompta"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        app:cardCornerRadius="20dp">

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvVerMisObjetos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/info_user"
        app:layout_constraintTop_toBottomOf="@id/cvEditarObjetos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cvCanviarCompta"
        app:layout_constraintBottom_toTopOf="@id/vLinea"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="30dp"
        app:cardCornerRadius="20dp">

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvCanviarCompta"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/info_user"
        app:layout_constraintTop_toBottomOf="@id/cvSubirObjetos"
        app:layout_constraintStart_toEndOf="@id/cvVerMisObjetos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/vLinea"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="30dp"
        app:cardCornerRadius="20dp">

    </androidx.cardview.widget.CardView>









    <!-- Menu de abajo para todas las activities -->

    <View
        android:id="@+id/vLinea"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/borde"
        app:layout_constraintBottom_toTopOf="@+id/menuBottom"
        />

    <LinearLayout
        android:id="@+id/menuBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="15dp"
        android:layout_marginBottom="10dp"
        >

        <ImageView
            android:id="@+id/btn_mapa"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_mapa"
            android:contentDescription="mapa"
            app:tint="@color/white"
            android:background="?attr/selectableItemBackground"/>

        <ImageView
            android:id="@+id/btn_lupa"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_lupa"
            android:contentDescription="lupa"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="60dp"
            app:tint="@color/white"
            android:background="?attr/selectableItemBackground"/>

        <ImageView
            android:id="@+id/btn_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="perfil"
            android:src="@drawable/ic_profile2"
            app:tint="@color/white"
            android:background="?attr/selectableItemBackground"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
